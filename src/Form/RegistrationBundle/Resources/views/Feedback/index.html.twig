{{ form_start(form,{'attr': {'novalidate': 'novalidate','class':'form-horizontal'}}) }}

<div class="form-group">
    {{ form_label(form.name)|trans|raw }}
    {{ form_widget(form.name) }}
    {{ form_errors(form.name) }}
</div>

<div class="form-group">
    {{ form_label(form.email)|trans|raw }}
    {{ form_widget(form.email) }}
    {{ form_errors(form.email) }}
</div>

<div class="form-group">
    {{ form_label(form.comment)|trans|raw }}
    {{ form_widget(form.comment) }}
    {{ form_errors(form.comment) }}
</div>

<div class="form-group">
    <div id="feedback_captcha" data-siteKey="{{ captcha_public_key }}" ></div>
</div>

<div id="error_box" class="alert alert-danger" style="display: none;" role="alert">
    <p id="errorFeedback">{% trans %}fill_fields_and_prove_you_are_a_human{% endtrans %}</p>
</div>

<button type="button" id="feedback_submit" class="btn btn-default">{% trans %}send_feedback{% endtrans %}</button>
{{ form_end(form) }}

